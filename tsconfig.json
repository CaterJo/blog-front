{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "*": [
        "*"
      ]
    },
    "outDir": "./build"
  },
  "typeRoots": [
    "node_modules/@types",
    "./types"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "./node_modules/**/*"
  ],
  "include": [
    "src",
    "@type", "scripts"
  ]
}